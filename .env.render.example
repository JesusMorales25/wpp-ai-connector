# üîê VARIABLES DE ENTORNO PARA RENDER.COM

# ===== CONFIGURACI√ìN BASE =====
NODE_ENV=production
PORT=3001

# ===== PUPPETEER / CHROME =====
# En Render, Chrome ya viene instalado en la imagen Docker
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# ===== WHATSAPP WEB.JS =====
# Estrategia de autenticaci√≥n
USE_LOCAL_AUTH=true

# Cache directory (en /tmp para que no sea persistente entre reinicios)
WWEBJS_CACHE_DIR=/tmp/.wwebjs_cache

# Logs internos de whatsapp-web.js
WWEBJS_USE_LOGGER=false

# ===== BOT IA INTEGRATION =====
# Reemplaza con tu endpoint real
BOT_IA_ENDPOINT=https://tu-backend-api.com/api/chat
BOT_IA_KEY=your-api-key-here

# ===== OPCIONALES =====
# Para debugging (desactivar en producci√≥n)
DEBUG=false
LOG_LEVEL=info
